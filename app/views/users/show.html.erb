<h1><%= @user.full_name %>'s Page!</h1>
<h4><%= link_to "Back to all movies", movies_path %></h4>
<p><%= @user.firstname %> can be reached at <%= link_to @user.email %>.</p>

<h2>Reviews from <%= @user.firstname %></h2>
<% if @user.reviews.nil? %>
  <p><%= @user.firstname %> does not have any reviews posted %></p>
<% else %>
  <% @user.reviews.each do |review| %>
    <h3><%= link_to review.movie.title, movie_path(review.movie) %></h3>
    <h4>Rating: <%= review.rating_out_of_ten %> / 10</h4>
    <p><%= review.text %></p>
  <% end %>
<% end %>

