<h3>Search for a movie</h3>

<%= form_tag('/movies', method: "get") do %>
  <div>
    <%= label_tag(:title, "Search by title:") %>
    <%= text_field_tag(:title) %>
  </div>
  <div>
    <%= label_tag(:director, "Search by director") %>
    <%= text_field_tag(:director) %>
  </div>
  <div>
    <%= label_tag(:runtime_in_minutes, "Search by duration") %>
    <%= select_tag(:runtime_in_minutes, options_for_select(["Blank", "Less than 90 minutes", "Between 90 and 120 minutes", "Over 120 minutes"])) %>
  </div>
  <div>
    <%= submit_tag("Search") %>
  </div>
<% end %>
<hr>