<h4><%= link_to movie.title, movie_path(movie) %></h4>
<h5>Directed by: <%= link_to movie.director, movie_path(movie) %></h5>

<h4>User Reviews:</h4>
<% if movie.reviews.empty? %>
  <small>There are currently no reviews for <%= movie.title %></small>
<% else %>
  <h5>Number of reviews: <%= movie.reviews.count %>, Average Rating: <%= movie.review_average %>/10 </h5>
  <ol>
    <% movie.reviews.each do |review| %>
      <li><%= link_to review.user.full_name, user_path(review.user) %></li>
    <% end %>
  </ol>
<% end %>

<%= image_tag(movie.poster_image_url(:thumb)) %>

<p><%= movie.description %></p>

<small><%= movie.runtime_in_minutes %> minutes. Released on: <%= formatted_date(movie.release_date) %></small>

