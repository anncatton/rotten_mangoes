<%= link_to "Back to all movies", movies_path %>
<hr>
<h4><%= link_to "Edit", edit_movie_path(@movie) %></h4>
<h4><%= link_to "Delete", movie_path(@movie), method: :delete, confirm: "Are you sure?" %></h4>
<hr>

<h3><%= @movie.title %></h3>
<div><%= link_to image_tag(@movie.poster_image_url), movie_path(@movie) %></div>
<h4>Directed by: <%= @movie.director %></h4>
<p><%= @movie.description %></p>
<small>Total runtime: <%= @movie.runtime_in_minutes %> minutes.</small>
<br>
<small>Released on <%= @movie.release_date.httpdate %></small>
